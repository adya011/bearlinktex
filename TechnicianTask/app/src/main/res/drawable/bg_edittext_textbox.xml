<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/darkerTheme" />
            <stroke android:color="@color/redTheme"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/redTheme" />
            <corners
                android:radius="4dp"/>
        </shape>
    </item>

</selector>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="techtask.nanda.techniciantask.fragment.FrontFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_bertex_front" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bertex_logo"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/telegrafico"
            android:text="WELCOME\nTO THE LAND\nOF BEARS"
            android:textColor="@color/white"
            android:textSize="42sp" />

        <ImageView
            android:id="@+id/bertex_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/img_bertex_logo_bear" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@id/bertex_logo"
            android:layout_centerInParent="true"
            android:src="@drawable/img_bertex_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_box_radius_front"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_join_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="JOIN NOW"
                android:text="JOIN NOW"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SIGN IN"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>

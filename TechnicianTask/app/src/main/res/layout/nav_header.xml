<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#494949"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_box_radius_nav_header">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="42dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:elevation="12dp"
                app:cardBackgroundColor="@color/redTheme"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_account_circle" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_profile"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nav_slider_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:text="JOHN"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:text=" | "
                    android:textColor="@color/white"
                    android:textSize="21sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:text="TECH ID XXXX"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_box_rate"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:paddingBottom="1dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="1dp">

                <ImageView
                    android:id="@+id/img_rate_1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/img_rate_star_active" />

                <ImageView
                    android:id="@+id/img_rate_2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/img_rate_star_active" />

                <ImageView
                    android:id="@+id/img_rate_3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/img_rate_star_active" />

                <ImageView
                    android:id="@+id/img_rate_4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/img_rate_star_active" />

                <ImageView
                    android:id="@+id/img_rate_5"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/img_rate_star_active" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>